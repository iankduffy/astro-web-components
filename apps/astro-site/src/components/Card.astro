---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<img src="https://source.unsplash.com/1000x600/?coding" alt="Arrow" width="1000" height="600" />
		<div class="p-4">
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p></div>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		/* display: flex; */
		background-color: var(--darker);
		overflow: hidden;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1), transform 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.1);
		
	}

	.link-card:hover {
		transform: translateY(-10px);
	}

	.link-card > a {
		line-height: 1.4;
		color: white;
		overflow: hidden;
	}

	h2 {
		font-size: 1.25rem;
	}

	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
</style>
